<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h1>Edit / View post</h1>
    <form action="/delete-post/<%= post._id %>?_method=DELETE" method="post">
        <input type="submit" value="Delete" class="btn-delete btn">
    </form>
</div>
<form action="/edit-post/<%= post._id %>?_method=PUT" method="POST">
    <label for="title">Title: </label>
    <input type="text" name="title" placeholder="Post Title" value="<%= post.title %>" >
    <label for="body">Contant: </label>
    <textarea name="body" placeholder="Post Contant" cols="50" rows="10"><%= post.body %></textarea>
    <input type="submit" value="Update" class="btn">
</form>